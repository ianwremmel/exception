{
  "name": "@ianwremmel/exception",
  "version": "1.0.0",
  "description": "Base-class for browser and nodejs Exceptions",
  "main": "src/index.js",
  "scripts": {
    "commitmsg": "npm run --silent lint:commitmsg",
    "lint": "npm run --silent lint:js && npm run --silent lint:changelog && npm run --silent lint:deps",
    "lint:changelog": "conventional-changelog-lint --from origin/master --to HEAD",
    "lint:commitmsg": "conventional-changelog-lint -e",
    "lint:eslint": "eslint --ignore --ignore-path .gitignore",
    "lint:js": "npm run --silent lint:eslint -- .",
    "lint:deps": "npm run --silent lint:deps:missing && npm run --silent lint:deps:unused",
    "lint:deps:missing": "dependency-check package.json",
    "lint:deps:unused": "dependency-check package.json --unused --no-dev",
    "lint:staged": "lint-staged",
    "mocha-reporter-options": "[ -n \"${CI}\" ] && echo '--reporter xunit --reporter-options output=reports/junit/test.xml'",
    "precommit": "npm run --silent lint:staged",
    "test": "npm run --silent test:node && npm run --silent test:browsers",
    "test:node": "mocha $(npm run --silent mocha-reporter-options) './src/**/*-spec.js'",
    "test:browser": "karma start"
  },
  "engines": {
    "node": ">=6"
  },
  "keywords": [],
  "author": "Ian W. Remmel <design@ianwremmel.com>",
  "license": "MIT",
  "devDependencies": {
    "@ianwremmel/eslint-config-base": "^1.0.0",
    "@ianwremmel/eslint-config-standard": "^1.0.0",
    "chai": "^4.1.2",
    "conventional-changelog": "^1.1.6",
    "conventional-changelog-lint": "^2.1.1",
    "dependency-check": "^2.9.1",
    "eslint": "^4.10.0",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-mocha": "^4.11.0",
    "husky": "^0.14.3",
    "karma": "^1.7.1",
    "karma-chrome-launcher": "^2.2.0",
    "karma-firefox-launcher": "^1.0.1",
    "karma-junit-reporter": "^1.2.0",
    "karma-mocha": "^1.3.0",
    "karma-mocha-reporter": "^2.2.5",
    "karma-safari-launcher": "^1.0.0",
    "karma-sauce-launcher": "^1.2.0",
    "karma-webpack": "^2.0.5",
    "lint-staged": "^4.3.0",
    "mocha": "^4.0.1",
    "webpack": "^3.8.1"
  },
  "lint-staged": {
    "*.js": "lint:eslint"
  },
  "dependencies": {}
}
